---
// Astro imports
import { Image } from 'astro:assets';
import fondoSitiosWeb from '../../assets/images/fondo-hero.jpg';
import personajeSitiosWeb from '../../assets/images/personaje-hero.png';
---

<section class="relative min-h-[70vh] pt-20 flex items-center overflow-hidden">
  <!-- Fondo como imagen absoluta optimizada -->
  <div class="absolute inset-0 -z-10">
    <Image
      src={fondoSitiosWeb}
      alt="Fondo institucional para la sección de Sitios Web"
      width={1920}
      height={1080}
      class="w-full h-full object-cover object-center"
      loading="lazy"
    />
  </div>

  <!-- Contenido -->
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-col md:flex-row items-center justify-between gap-8">
    
    <!-- Texto -->
    <div class="md:w-1/2 text-center md:text-left">
      <h1 class="text-4xl md:text-5xl font-extrabold text-gray-900 drop-shadow-md leading-tight">
        Sitios web que venden, conectan y representan tu marca
      </h1>
      <p class="mt-4 text-lg text-gray-800 drop-shadow-sm">
        Diseño profesional, velocidad optimizada y enfoque modular. Ideal para negocios, instituciones y emprendedores que buscan presencia digital con impacto.
      </p>

      <!-- Botones -->
      <div class="mt-6 flex flex-col sm:flex-row gap-4 justify-center md:justify-start">
        <a href="/contacto"
          class="bg-sky-600 text-white font-semibold py-3 px-6 rounded-lg shadow-md hover:bg-sky-700 hover:scale-105 hover:shadow-xl transition duration-300">
          Solicita tu cotización
        </a>
        <a href="/portafolio"
          class="bg-gray-800 text-white font-semibold py-3 px-6 rounded-lg shadow-md hover:bg-gray-900 hover:scale-105 hover:shadow-xl transition duration-300">
          Ver proyectos
        </a>
      </div>
    </div>

    <!-- Imagen del personaje optimizada -->
    <div class="md:w-1/2 flex justify-center">
      <Image
        src={personajeSitiosWeb}
        alt="Ilustración institucional de Rock Hosting Plus para la sección Sitios Web"
        width={400}
        height={400}
        class="max-h-[80vh] w-full max-w-md object-contain"
        loading="lazy"
      />
    </div>
  </div>
</section>