---
import { Icon } from 'astro-icon/components';

const planes = [
  {
    nombre: 'Web Hosting',
    icono: 'mdi:web',
    descripcion: 'Ideal para sitios personales o empresariales con tráfico moderado.',
    precio: '$99/año',
    incluye: ['1 dominio gratis', 'Certificado SSL', 'cPanel incluido', 'Soporte 24/7'],
    enlace: '/planes/web-hosting',
  },
  {
    nombre: 'Reseller Hosting',
    icono: 'mdi:account-multiple',
    descripcion: 'Perfecto para agencias o emprendedores que quieren revender hosting.',
    precio: '$249/año',
    incluye: ['10 cuentas cPanel', 'Marca blanca', 'WHM incluido', 'Soporte prioritario'],
    enlace: '/planes/reseller-hosting',
  },
  {
    nombre: 'WordPress Hosting',
    icono: 'mdi:wordpress',
    descripcion: 'Optimizado para velocidad, seguridad y actualizaciones automáticas.',
    precio: '$149/año',
    incluye: ['Instalación 1 clic', 'Actualizaciones automáticas', 'Backups diarios', 'Soporte especializado'],
    enlace: '/planes/wordpress-hosting',
  },
];
---

<section class="bg-white py-20">
  <div class="max-w-7xl mx-auto px-6 text-center">
    <h2 class="text-3xl font-bold text-gray-800 mb-12">Comparativa de Planes</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {planes.map((plan) => (
        <div class="border rounded-lg p-6 shadow hover:shadow-lg transition-shadow duration-300 text-left">
          <div class="flex items-center gap-3 mb-4 text-orange-600">
            <Icon name={plan.icono} class="w-7 h-7" />
            <h3 class="text-xl font-semibold text-gray-800">{plan.nombre}</h3>
          </div>
          <p class="text-sm text-gray-600 mb-4">{plan.descripcion}</p>
          <p class="text-lg font-bold text-gray-700 mb-4">{plan.precio}</p>
          <ul class="text-sm text-gray-600 mb-6 list-disc list-inside">
            {plan.incluye.map((item) => (
              <li>{item}</li>
            ))}
          </ul>
          <a href={plan.enlace} class="inline-block bg-orange-600 text-white px-5 py-2 rounded-md hover:bg-orange-700 transition-colors">
            Ver detalles
          </a>
        </div>
      ))}
    </div>
  </div>
</section>